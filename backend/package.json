{
  "name": "patas-unidas-backend",
  "version": "1.0.0",
  "description": "API completa do sistema Patas Unidas - Sistema de adoção e gerenciamento de animais (Node.js + Express + MySQL)",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "prod": "NODE_ENV=production node src/server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "reset-db": "node src/database/reset.js",
    "create-admin": "node src/scripts/createAdmin.js",
    "docs": "apidoc -i src/ -o docs/",
    "docker:build": "docker build -t patas-unidas-api .",
    "docker:run": "docker run -p 3001:3001 patas-unidas-api",
    "docker:compose": "docker-compose up",
    "docker:compose:prod": "docker-compose -f docker-compose.prod.yml up -d"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.3",
    "nodemailer": "^6.9.1",
    "path": "^0.12.7",
    "fs": "^0.0.1-security",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.40.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "apidoc": "^0.53.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "patas-unidas",
    "adocao",
    "animais",
    "api",
    "nodejs",
    "express",
    "mysql",
    "ong",
    "protetor-animal"
  ],
  "author": "Patas Unidas <patasunidas2025@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/patasunidas/backend-api.git"
  },
  "bugs": {
    "url": "https://github.com/patasunidas/backend-api/issues"
  },
  "homepage": "https://github.com/patasunidas/backend-api#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/database/**",
      "!src/scripts/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}